<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical">

    <EditText
        android:id="@+id/edLoginUsername"
        style="@style/text_default_style"
        android:lines="1"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:hint="@string/username_or_email"
        android:drawableStart="@drawable/icon_user"
        android:drawableEnd="@drawable/icon_alert"
        />
    <EditText
        android:id="@+id/edLoginPassword"
        style="@style/text_default_style"
        android:lines="1"
        android:maxLines="1"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:drawableStart="@drawable/icon_password"
        android:drawableEnd="@drawable/icon_alert"
        />

    <Button
        android:id="@+id/btnLogin"
        style="@style/text_default_style"
        android:text="@string/login"
        android:background="@color/yellow"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvForgotPassword"
        style="@style/text_default_style"
        android:text="@string/forgot_password"
        android:textColor="@color/text_link"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:id="@+id/relLoginWithFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/login_with_fb"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="@dimen/size_icon_inside_button"
            android:layout_height="@dimen/size_icon_inside_button"
            android:src="@drawable/icon_facebook"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relLoginWithGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red_dark"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/login_with_google"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <ImageView
            android:layout_width="@dimen/size_icon_inside_button"
            android:layout_height="@dimen/size_icon_inside_button"
            android:src="@drawable/icon_google"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvTermPolicy"
        style="@style/text_default_style"
        android:text="@string/term_policy"
        android:textColor="@color/text_link"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"

        android:gravity="center_horizontal"
        />
    <ProgressBar
        android:id="@+id/progressBarLogin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center|bottom"
        android:layout_margin="20dp"
        android:visibility="gone" />
</LinearLayout>